<Window x:Class="PingPad.Views.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        Background="White"
        ShowInTaskbar="False"
        Topmost="True"
        Width="280" Height="130"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        Opacity="1">

    <Border Background="White"
            CornerRadius="12"
            Padding="10"
            BorderBrush="#DDD"
            BorderThickness="1"
            SnapsToDevicePixels="True">
        <StackPanel Orientation="Vertical" Margin="4,2,4,2">

            <!-- App name -->
            <TextBlock Text="PingPad"
                       Foreground="#666"
                       FontSize="11"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>

            <!-- Reminder! -->
            <TextBlock Text="Reminder!"
                       Foreground="Black"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,2"/>

            <!-- Dynamic time -->
            <TextBlock x:Name="TimeBlock"
                       Foreground="#777"
                       FontSize="12"
                       FontWeight="Normal"
                       Margin="0,0,0,6"
                       Text="--:--" />

            <!-- Dynamic title (from StickyNote) -->
            <TextBlock x:Name="TitleText"
                       Foreground="Black"
                       FontSize="14"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"
                       Margin="0,0,0,4"
                       Text="(Note Title Here)" />

            <!-- Dynamic note preview -->
            <TextBlock x:Name="ContentBlock"
                       Foreground="#222"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Text="(Note content preview here)" />
        </StackPanel>
    </Border>
</Window>
